<?xml version="1.0" encoding="UTF-8"?>
<grammar xmlns="http://relaxng.org/ns/structure/1.0"
    xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0"
    datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">
    <start>
        <element name="remiXML">
            <element name="metadata">
                <element name="original-title">
                    <a:documentation>Title of original text</a:documentation>
                    <text/>
                </element>
                <element name="doc-title">
                    <a:documentation>Title of this XML document; title of your choosing</a:documentation>
                    <text/>
                </element>
                <oneOrMore>
                    <element name="writer">
                        <a:documentation>Name of either original author or remixer</a:documentation>
                        <attribute name="ID">
                            <data type="ID"/>
                        </attribute>
                        <attribute name="type">
                            <choice>
                                <value>original</value>
                                <value>remixer</value>
                            </choice>
                        </attribute>
                        <text/>
                    </element>
                </oneOrMore>
                <zeroOrMore>
                    <element name="character">
                        <attribute name="ID">
                            <data type="ID"/>
                        </attribute>
                        <text/>
                    </element>
                </zeroOrMore>
            </element>
            <element name="original">
                <a:documentation>Paste original text here</a:documentation>
                <oneOrMore>
                    <element name="p">
                        <oneOrMore>
                            <choice>
                                <text/>
                                <element name="general">
                                    <attribute name="remixerID">
                                        <data type="anyURI"/>
                                    </attribute>
                                    <attribute name="playID">
                                        <data type="ID"/>
                                    </attribute>
                                    <attribute name="playType">
                                         <choice>
                                             <value>remix</value>
                                             <value>expand</value>
                                             <value>analysis</value>
                                             <value>question</value>
                                            </choice>
                                      </attribute>
                                        <text/>
                                    <optional>
                                        <attribute name="charaID">
                                            <data type="anyURI"/>
                                        </attribute>
                                    </optional>
                                    <text/>
                                </element>
                            </choice>
                        </oneOrMore>
                    </element>
                </oneOrMore>
            </element>
            <element name="play">
                <a:documentation>This is where you get to play!</a:documentation>
                <oneOrMore>
                    <choice>
                        <oneOrMore>
                            <element name="remix">
                            <attribute name="playID">
                                <data type="anyURI"/>
                            </attribute>
                            <text/>
                        </element>
                        </oneOrMore>
                        <oneOrMore>
                            <element name="analysis">
                            <attribute name="playID">
                                <data type="anyURI"/>
                            </attribute>
                            <text/>
                        </element>
                        </oneOrMore>
                        <oneOrMore>
                            <element name="expand">
                            <attribute name="playID">
                                <data type="anyURI"/>
                            </attribute>
                            <text/>
                        </element>
                        </oneOrMore>
                        <oneOrMore>
                            <element name="question">
                                <attribute name="playID">
                                    <data type="anyURI"/>
                                </attribute>
                                <text/>
                            </element>
                        </oneOrMore>
                    </choice>
                </oneOrMore>
            </element>
        </element>
    </start>
</grammar>
